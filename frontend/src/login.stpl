<div id="login">
  <% if let Some(user) = user { %>
    <nav>
      <ul>
        <% if editing { %>
          <form id="user-edit" method="POST" action="/auth/patchlogin">
            <input 
              name="username"
              placeholder="Username"
              aria-label="Username"
              value="<%= user.username %>"
              autocomplete="username"
            />
            <input
              type="password"
              name="password"
              placeholder="Password"
              aria-label="Password"
              autocomplete="current-password"
            />
            <input
              type="submit"
              value="Edit"
            />
          </form>
        <% } else { %>
          <li>Welcome <%= user.username %></li>
        <% } %>
      </ul>
      <ul hx-swap="outerHTML" hx-target="#login">
        <li><a href="/auth/logout">Logout</a></li>
        <% if !editing { %>
          <li><a hx-get="/auth/login?edit=true"><i data-lucide="pencil" /></a></li>
        <% } %>
      </ul>
    </nav>
  <% } else { %>
    <form method="POST">
      <fieldset class="grid">
        <input 
          name="username"
          placeholder="Username"
          aria-label="Username"
          autocomplete="username"
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          aria-label="Password"
          autocomplete="current-password"
        />
        <div role="group">
          <input
            type="submit"
            value="Log in"
            formaction="/auth/login"
          />
          <input
            type="submit"
            value="Sign up"
            formaction="/auth/signup"
          />
        </div>
      </fieldset>
    </form>
  <% } %>
</div>
